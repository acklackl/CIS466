<!DOCTYPE html>
<html>

<%- include head %>

<body>
    <%- include nav %>
    <form method="POST" action="/order" class="checkoutForm">
    <div class="container">
        <h3>Card Information</h3>
    <div class="form-row">
        <div class="col-8">
        <input name="ccNumber" type="text" class="form-control" placeholder="Card Number" required>
        </div>
    </div>
    </div>

    <br>
    <div class="container">
        <h3>Shipping</h3>
        <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstName">First Name</label>
            <input name="shippingFirstName" type="First Name" class="form-control" id="firstName" placeholder="First Name" required>
        </div>
        <div class="form-group col-md-6">
            <label for="lastName">Last Name</label>
            <input name="shippingLastName" type="Last Name" class="form-control" id="lastName" placeholder="Last Name" required>
        </div>
        </div>
        <div class="form-group">
        <label for="inputAddress">Address</label>
        <input name="shippingStreet" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
        </div>
        <div class="form-group">
        <label for="inputAddress2">Address 2 (Optional)</label>
        <input name="shippingFloor" type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>
        <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input name="shippingCity" type="text" class="form-control" id="inputCity" required>
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">State</label>
            <select name="shippingState" id="inputState" class="form-control" required>
            <option value="" disabled selected>Choose one...</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <input name="shippingZip" type="text" class="form-control" id="inputZip" required>
        </div>
        </div>
        <div class="form-group">
        <div class="form-check">
            <input name="sameAsShipping" class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
            Billing same as Shipping
            </label>
        </div>
        </div>
    </div>

    <br>
    <div class="container">
        <h3>Billing</h3>
        <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstName">First Name</label>
            <input name="billingFirstName" type="First Name" class="form-control" id="firstName" placeholder="First Name" required>
        </div>
        <div class="form-group col-md-6">
            <label for="lastName">Last Name</label>
            <input name="billingLastName" type="Last Name" class="form-control" id="lastName" placeholder="Last Name" required>
        </div>
        </div>
        <div class="form-group">
        <label for="inputAddress">Address</label>
        <input name="billingStreet" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" required>
        </div>
        <div class="form-group">
        <label for="inputAddress2">Address 2 (Optional)</label>
        <input name="billingFloor" type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>
        <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input name="billingCity" type="text" class="form-control" id="inputCity" required>
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">State</label>
            <select name="billingState" id="inputState2" class="form-control" required>
                <option value="" disabled selected>Choose one...</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <input name="billingZip" type="text" class="form-control" id="inputZip" required>
        </div>
        </div>
    </div>


    <div class="container">
    <span>Total: <%= '$' + parseFloat(total) %></span>
    <br>
    <button type="submit" class="btn btn-primary">Checkout</button>
    </div>
</form>
</body>
<%- include footer %>
<%- include popups %>
<%- include scripts %>

<script>
    var stateList = ["AK", "AL", "AR", "AZ", "CA", "CO", "CT", "DC",  
    "DE", "FL", "GA", "HI", "IA", "ID", "IL", "IN", "KS", "KY", "LA",  
    "MA", "MD", "ME", "MI", "MN", "MO", "MS", "MT", "NC", "ND", "NE",  
    "NH", "NJ", "NM", "NV", "NY", "OH", "OK", "OR", "PA", "RI", "SC",  
    "SD", "TN", "TX", "UT", "VA", "VT", "WA", "WI", "WV", "WY"];
    var $states = $("#inputState");
    var $states2 = $("#inputState2");
    for (var i = 0; i < stateList.length; i++) {
        $states.append($("<option />").val(stateList[i]).text(stateList[i]));
        $states2.append($("<option />").val(stateList[i]).text(stateList[i]));
    }
</script>

</html>